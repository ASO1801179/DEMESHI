<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateCard">

    <ImageView
        android:id="@+id/BackDesign"
        android:layout_width="@dimen/MyCardWidth"
        android:layout_height="@dimen/MyCardHeight"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="70dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/simple_frame" />
    ​

    <EditText
        android:id="@+id/EditMail"
        android:layout_width="@dimen/TextWidth"
        android:layout_height="@dimen/CreateTextHeight"
        android:layout_marginEnd="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="@string/MailHint"
        android:inputType="textEmailAddress"
        android:textSize="@dimen/TextSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EditPhone" />
    ​

    <EditText
        android:id="@+id/EditPhone"
        android:layout_width="@dimen/TextWidth"
        android:layout_height="@dimen/CreateTextHeight"
        android:layout_marginEnd="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="@string/PhoneHint"
        android:inputType="phone"
        android:textSize="@dimen/TextSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EditName" />
    ​

    <EditText
        android:id="@+id/EditName"
        android:layout_width="@dimen/TextWidth"
        android:layout_height="@dimen/TextHeight"
        android:layout_marginEnd="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="80dp"
        android:ems="10"
        android:hint="@string/NameHint"
        android:inputType="textPersonName"
        android:textSize="@dimen/TextSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BackDesign" />
    ​
    <Button
        android:id="@+id/CreateBtn"
        android:layout_width="@dimen/CreateBtnWidth"
        android:layout_height="@dimen/CreateBtnHeight"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/CreateBtnHint"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    ​
    <Button
        android:id="@+id/Back"
        android:layout_width="@dimen/BackBtnWidth"
        android:layout_height="@dimen/BackBtnHeight"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="@string/BackHint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    ​

    <TextView
        android:id="@+id/Name1"
        android:layout_width="@dimen/Create_Width"
        android:layout_height="@dimen/Create_Height"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="74dp"
        android:layout_marginStart="74dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="藤家　竜"
        android:textSize="@dimen/CreateTextSize"
        app:layout_constraintBottom_toBottomOf="@+id/BackDesign"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.386"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/BackDesign"
        app:layout_constraintVertical_bias="0.516" />
    ​

    <TextView
        android:id="@+id/Phone"
        android:layout_width="@dimen/Create_Width"
        android:layout_height="@dimen/Create_Height"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:text="電話番号"
        android:textSize="@dimen/CreateTextSize"
        app:layout_constraintEnd_toEndOf="@+id/BackDesign"
        app:layout_constraintTop_toBottomOf="@+id/Mail" />
    ​

    <TextView
        android:id="@+id/place"
        android:layout_width="@dimen/Create_Width"
        android:layout_height="@dimen/Create_Height"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="株式会社松尾"
        android:textSize="@dimen/CreateTextSize"
        app:layout_constraintStart_toStartOf="@+id/BackDesign"
        app:layout_constraintTop_toBottomOf="@+id/Name1" />
    ​

    <TextView
        android:id="@+id/Mail"
        android:layout_width="@dimen/Create_Width"
        android:layout_height="@dimen/Create_Height"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="32dp"
        android:text="メールアドレス"
        android:textSize="@dimen/CreateTextSize"
        app:layout_constraintEnd_toEndOf="@+id/BackDesign"
        app:layout_constraintTop_toBottomOf="@+id/Name1" />

</android.support.constraint.ConstraintLayout>