<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhotoCard">

    <ImageButton
        android:id="@+id/PhotoCardBtn"
        android:layout_width="@dimen/TabBtnWidth"
        android:layout_height="@dimen/TabBtnHeight"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:background="@color/TabColor"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/camera" />

    <ImageButton
        android:id="@+id/HaveCardBtn"
        android:layout_width="@dimen/TabBtnWidth"
        android:layout_height="@dimen/TabBtnHeight"
        android:background="@color/TabColor"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/PhotoCardBtn"
        app:layout_constraintStart_toStartOf="@+id/MyCardBtn"
        app:srcCompat="@drawable/havecard" />

    <ImageButton
        android:id="@+id/MyCardBtn"
        android:layout_width="@dimen/TabBtnWidth"
        android:layout_height="@dimen/TabBtnHeight"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="2dp"
        android:background="@color/TabColor"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/mycard" />

    <EditText
        android:id="@+id/Card_id"
        android:layout_width="@dimen/TextBoxWidth"
        android:layout_height="@dimen/TextBoxHeight"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="368dp"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/AddHint"
        android:inputType="textPersonName"
        android:textSize="@dimen/TextSize"
        app:layout_constraintBottom_toTopOf="@+id/AddBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.004" />

    <Button
        android:id="@+id/AddBtn"
        android:layout_width="@dimen/BtnWidth"
        android:layout_height="@dimen/BtnHeight"
        android:layout_marginBottom="100dp"
        android:text="@string/AddBtnHint"
        android:textSize="@dimen/BtnTextSize"
        app:layout_constraintBottom_toTopOf="@+id/HaveCardBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>