<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateCompany">

    <ImageView
        android:id="@+id/BackDesign"
        android:layout_width="@dimen/MyCardWidth"
        android:layout_height="@dimen/MyCardHeight"
        android:layout_marginTop="128dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/simple_frame" />

    <EditText
        android:id="@+id/EditMail"
        android:layout_width="@dimen/CreateTextWidth"
        android:layout_height="@dimen/CreateTextHeight"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="@string/MailHint"
        android:inputType="textEmailAddress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EditPhone" />

    <EditText
        android:id="@+id/EditPhone"
        android:layout_width="@dimen/CreateTextWidth"
        android:layout_height="@dimen/CreateTextHeight"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="@string/PhoneHint"
        android:inputType="phone"
        android:textSize="@dimen/CreateTextSize"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EditCompanyName" />

    <EditText
        android:id="@+id/EditAddress"
        android:layout_width="@dimen/CreateTextWidth"
        android:layout_height="@dimen/CreateTextHeight"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="@string/AddressHint"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EditMail" />

    <EditText
        android:id="@+id/EditCompanyName"
        android:layout_width="@dimen/CreateTextWidth"
        android:layout_height="@dimen/CreateTextHeight"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:hint="@string/CompanyNameHint"
        android:inputType="textPersonName"
        android:textSize="@dimen/CreateTextSize"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BackDesign" />

    <Button
        android:id="@+id/CreateBtn"
        android:layout_width="@dimen/CreateBtnWidth"
        android:layout_height="@dimen/CreateBtnHeight"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/CreateBtnHint"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/Back"
        android:layout_width="@dimen/BackBtnWidth"
        android:layout_height="@dimen/BackBtnHeight"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="@string/BackHint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/CompanyName"
        android:layout_width="@dimen/CreateTextWidth"
        android:layout_height="@dimen/CreateTextHeight"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="企業名"
        android:textSize="@dimen/CreateTextSize"
        app:layout_constraintStart_toStartOf="@+id/BackDesign"
        app:layout_constraintTop_toTopOf="@+id/BackDesign" />

    <TextView
        android:id="@+id/Phone"
        android:layout_width="@dimen/CreateTextWidth"
        android:layout_height="@dimen/CreateTextHeight"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="電話番号"
        android:textSize="@dimen/CreateTextSize"
        app:layout_constraintStart_toStartOf="@+id/BackDesign"
        app:layout_constraintTop_toBottomOf="@+id/CompanyName" />

    <TextView
        android:id="@+id/Address"
        android:layout_width="@dimen/CreateTextWidth"
        android:layout_height="@dimen/CreateTextHeight"
        android:layout_marginStart="108dp"
        android:layout_marginLeft="108dp"
        android:layout_marginTop="28dp"
        android:text="URL"
        android:textSize="@dimen/CreateTextSize"
        app:layout_constraintStart_toStartOf="@+id/BackDesign"
        app:layout_constraintTop_toBottomOf="@+id/Mail" />

    <TextView
        android:id="@+id/Mail"
        android:layout_width="@dimen/CreateTextWidth"
        android:layout_height="@dimen/CreateTextHeight"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="メールアドレス"
        android:textSize="@dimen/CreateTextSize"
        app:layout_constraintStart_toStartOf="@+id/BackDesign"
        app:layout_constraintTop_toBottomOf="@+id/Phone" />

    <EditText
        android:id="@+id/url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:ems="10"
        android:hint="URL"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BackDesign" />

</android.support.constraint.ConstraintLayout>