<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HaveCardIndividual">

    <ImageView
        android:id="@+id/BackDesign"
        android:layout_width="@dimen/MyCardWidth"
        android:layout_height="@dimen/MyCardHeight"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="70dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/simple_frame" />

    <TextView
        android:id="@+id/name1"
        android:layout_width="@dimen/Create_Width"
        android:layout_height="38dp"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:textSize="@dimen/NameInCard"
        app:layout_constraintStart_toStartOf="@+id/BackDesign"
        app:layout_constraintTop_toTopOf="@+id/BackDesign" />
    ​

    <TextView
        android:id="@+id/Phone"
        android:layout_width="@dimen/Create_Width"
        android:layout_height="@dimen/Create_Height"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:textSize="@dimen/CreateTextSize"
        app:layout_constraintEnd_toEndOf="@+id/BackDesign"
        app:layout_constraintTop_toBottomOf="@+id/Mail" />
    ​

    <TextView
        android:id="@+id/Mail"
        android:layout_width="@dimen/Create_Width"
        android:layout_height="@dimen/Create_Height"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:textSize="@dimen/CreateTextSize"
        app:layout_constraintEnd_toEndOf="@+id/BackDesign"
        app:layout_constraintTop_toBottomOf="@+id/name1" />
    ​

    <TextView
        android:id="@+id/sns"
        android:layout_width="@dimen/Create_Width"
        android:layout_height="@dimen/Create_Height"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:textSize="@dimen/CreateTextSize"
        app:layout_constraintEnd_toEndOf="@+id/BackDesign"
        app:layout_constraintTop_toBottomOf="@+id/Phone" />

    <TextView
        android:id="@+id/Name1"
        android:layout_width="@dimen/TextWidth"
        android:layout_height="@dimen/TextHeight"
        android:layout_marginEnd="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30dp"
        android:gravity="left|center_vertical"
        android:textSize="@dimen/TextSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BackDesign" />

    <TextView
        android:id="@+id/PhoneNumber"
        android:layout_width="@dimen/TextWidth"
        android:layout_height="@dimen/TextHeight"
        android:layout_marginEnd="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30dp"
        android:gravity="left|center_vertical"
        android:textSize="@dimen/TextSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Name1" />

    <TextView
        android:id="@+id/MailAddress"
        android:layout_width="@dimen/MyCardWidth"
        android:layout_height="@dimen/TextHeight"
        android:layout_marginEnd="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30dp"
        android:gravity="left|center_vertical"
        android:textSize="@dimen/TextSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PhoneNumber" />

    <TextView
        android:id="@+id/SNS"
        android:layout_width="@dimen/TextWidth"
        android:layout_height="@dimen/TextHeight"
        android:layout_marginEnd="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30dp"
        android:gravity="left|center_vertical"
        android:textSize="@dimen/TextSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MailAddress" />

    <TextView
        android:id="@+id/CardId"
        android:layout_width="@dimen/TextWidth"
        android:layout_height="@dimen/TextHeight"
        android:layout_marginEnd="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30dp"
        android:gravity="left|center_vertical"
        android:textSize="@dimen/TextSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SNS" />

    <Button
        android:id="@+id/Back"
        android:layout_width="@dimen/BackBtnWidth"
        android:layout_height="@dimen/BackBtnHeight"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="@string/BackHint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Delete"
        android:layout_width="@dimen/DeleteBtnWidth"
        android:layout_height="@dimen/DeleteBtnHeight"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="16dp"
        android:text="@string/DeleteHint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>